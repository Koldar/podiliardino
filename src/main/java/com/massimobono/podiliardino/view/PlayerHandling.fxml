               <bottom>
                  <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <buttons>
                      <Button fx:id="newPlayer" mnemonicParsing="false" onAction="#handleNewPlayer" text="New" />
